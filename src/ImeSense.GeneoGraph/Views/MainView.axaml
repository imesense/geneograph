<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ImeSense.GeneoGraph.Views.MainView"
             Foreground="Black">
    <Border Background="White">
        <Grid RowDefinitions="40, *" ColumnDefinitions="*, 140" ShowGridLines="True">
            <StackPanel Background="Gray" Grid.ColumnSpan="2">
            </StackPanel>
            <Grid Grid.Column="1" Grid.Row="1" RowDefinitions="*,*" ShowGridLines="True" Background="Gray">
                <TextBlock Text="List People" Margin="5"/>
                <Border Background="DimGray" Margin="10,25,10,10">
                    <ListBox></ListBox>
                </Border>

                <TextBlock Text="Properties" Margin="5" Grid.Row="1"/>
                <Border Background="DimGray" Margin="10,25,10,10" Grid.Row="1">
                    <StackPanel Margin="5">
                        <TextBox x:Name="PersonFirstName" CornerRadius="0" HorizontalAlignment="Stretch" Margin="0,0,0,5"/>
                        <TextBox x:Name="PersonLastName" CornerRadius="0" HorizontalAlignment="Stretch" Margin="0,0,0,5"/>
                        <DropDown Items="Male, Female" HorizontalAlignment="Stretch"/>
                        <StackPanel Orientation="Horizontal">
                            <CheckBox/>
                            <TextBlock Text="Alive " VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>
</UserControl>

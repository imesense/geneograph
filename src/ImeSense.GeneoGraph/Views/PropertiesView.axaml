<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="250" d:DesignHeight="1080"
             xmlns:vm="clr-namespace:ImeSense.GeneoGraph.ViewModels"
             x:Class="ImeSense.GeneoGraph.Views.PropertiesView"
             FontFamily="Cascadia Mono"
             Background="#171717"
             Foreground="#dedede">

    <UserControl.DataContext>
        <vm:PeopleListViewModel />
    </UserControl.DataContext>

    <UserControl.Styles>
        <Style Selector="ToggleButton">
            <Setter Property="BorderThickness" Value="0,2,0,2"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>

        <Style Selector="ToggleButton:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent"/>
        </Style>
    </UserControl.Styles>
    
    <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto"
          ColumnDefinitions="*">

        <Grid ColumnDefinitions="Auto, *, Auto">
            <StackPanel Grid.Column="1"
                        Margin="10,10,0,10">
                <Label>
                    Nikita Lebedin
                </Label>
                <Label>
                    25 years
                </Label>
            </StackPanel>
            
            <Border Width="80"
                    Height="100"
                    Background="#dedede"
                    Grid.Column="2"
                    Margin="10"/>
        </Grid>

        <Expander Grid.Row="1"
                  HorizontalAlignment="Stretch"
                  Background="Transparent"
                  BorderBrush="Transparent"
                  IsExpanded="True">
            
            <Expander.Header>
                MAIN INFORMATION
            </Expander.Header>
            
            <Grid ColumnDefinitions="*, *">

                <!--Left column-->
                <StackPanel>
                    <Label FontSize="14">
                        First Name
                    </Label>
                    <TextBox Watermark="First Name"
                             Text="{Binding SelectedPerson.FirstName}"
                             FontSize="12"
                             VerticalContentAlignment="Center"
                             CornerRadius="1"
                             HorizontalAlignment="Left"
                             BorderThickness="0,0,0,1"
                             BorderBrush="#9dce8e"
                             Width="100"
                             Margin="0,2,0,5"/>

                    <Label FontSize="14"
                           Margin="0,5,0,0">
                        Middle Name
                    </Label>
                    <TextBox Watermark="Middle Name"
                             FontSize="12"
                             VerticalContentAlignment="Center"
                             CornerRadius="1"
                             HorizontalAlignment="Left"
                             BorderThickness="0,0,0,1" 
                             BorderBrush="#9dce8e"
                             Width="100"
                             Margin="0,2,0,5"/>

                    <Label FontSize="14"
                           Margin="0,5,0,0">
                        Birth Date
                    </Label>
                    <CalendarDatePicker
                        Width="100"/>
                    
                    <Label FontSize="14"
                           Margin="0,5,0,0">
                        Death Date
                    </Label>
                    <CalendarDatePicker
                        Width="100"/>
                </StackPanel>

                <!--Right column-->

                <StackPanel Grid.Column="1"
                            Margin="10,0,0,0">
                    
                    <Label FontSize="14">
                        Last Name
                    </Label>
                    <TextBox Watermark="Last Name"
                             Text="{Binding SelectedPerson.LastName}"
                             CornerRadius="1"
                             FontSize="12"
                             VerticalContentAlignment="Center"
                             HorizontalAlignment="Left"
                             BorderThickness="0,0,0,1" 
                             BorderBrush="#9dce8e"
                             Width="100"
                             Margin="0,2,0,5"/>

                    <Label FontSize="14"
                           Margin="0,5,0,0">
                        Gender
                    </Label>
                    <ComboBox ItemsSource="{Binding PeopleSex}"
                              SelectedItem="{Binding SelectedPerson.Sex}"
                              FontSize="10"
                             VerticalContentAlignment="Center"
                              HorizontalAlignment="Left"
                              CornerRadius="1"
                              BorderThickness="0,0,0,1"
                              BorderBrush="#9dce8e"
                              Width="100"
                              Margin="0,2,0,5"/>

                    <Label FontSize="12"
                           Margin="0,5,0,0">
                        Deceased
                    </Label>
                    <CheckBox IsChecked="{Binding SelectedPerson.IsAlive}" />
                    
                </StackPanel>
            </Grid>
        </Expander>
    </Grid>
</UserControl>

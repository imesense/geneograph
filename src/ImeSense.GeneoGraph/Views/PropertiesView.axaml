<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="450"
             xmlns:vm="clr-namespace:ImeSense.GeneoGraph.ViewModels"
             x:Class="ImeSense.GeneoGraph.Views.PropertiesView">

    <UserControl.DataContext>
        <vm:PeopleViewModel />
    </UserControl.DataContext>
    
    <Border
          BorderBrush="#3d3d3d"
          BorderThickness="1"
          Width="200">
        <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto">
            <Label FontSize="14"
                    Margin="0,0,0,9">
                Properties
            </Label>

            <TextBox Grid.Row="1"
                     Watermark="First Name"
                     Text="{Binding SelectedPerson.FirstName}"
                     CornerRadius="0"
                     HorizontalAlignment="Stretch"
                     Margin="0,0,0,5"
                     BorderThickness="0,0,0,1" />

            <TextBox Watermark="Last Name"
                        Grid.Row="2"
                        Text="{Binding SelectedPerson.LastName}"
                        CornerRadius="0"
                        HorizontalAlignment="Stretch"
                        Margin="0,0,0,5"
                        BorderThickness="0,0,0,1" />

            <ComboBox ItemsSource="{Binding PeopleSex}"
                        Grid.Row="3"
                        SelectedItem="{Binding SelectedPerson.Sex}"
                        HorizontalAlignment="Stretch"
                        CornerRadius="0"
                        BorderThickness="0,0,0,1" />

            <StackPanel Grid.Row="4"
                        Orientation="Horizontal"
                        Margin="5">
                <TextBlock Text="Birth:"
                           VerticalAlignment="Center"
                           Width="50" />
                <CalendarDatePicker />
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        Grid.Row="5"
                        Margin="5">
                <TextBlock Text="Deceased " VerticalAlignment="Center" />
                <CheckBox IsChecked="{Binding SelectedPerson.IsAlive}" />
            </StackPanel>

            <StackPanel Grid.Row="6"
                        Orientation="Horizontal"
                        Margin="5">
                <TextBlock Text="Death:"
                           VerticalAlignment="Center"
                           Width="50" />
                <CalendarDatePicker />
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
